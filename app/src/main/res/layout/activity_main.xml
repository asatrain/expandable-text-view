<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.expandabletextview.ExpandableTextView
        android:id="@+id/expandableTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.expandabletextview.ExpandableTextView
        android:id="@+id/expandableTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/expandableTextView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expandableTextView1" />

    <com.example.expandabletextview.ExpandableTextView
        android:id="@+id/expandableTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:foldedStateLineCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:text="ksjfhgkhadfjadfsk\nzvbbxnmxcvh\nhjgdhjsajhdjhasdhjasgdj" />

</androidx.constraintlayout.widget.ConstraintLayout>